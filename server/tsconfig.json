{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDirs": ["src", "test"],
    "moduleResolution": "node",
    "lib": ["dom", "es7", "es2015", "es6", "es2020"],
    "sourceMap": true,
    "baseUrl": "types",
    "typeRoots": ["types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "node_modules/@types/mocha/index.d.ts"],

  "exclude": ["node_modules", "**/*.spec.ts"]
}
